{
    "printWidth": 80,
    "tabWidth": 4,
    "trailingComma": "all",
    "singleQuote": true,
    "semi": true,
    "importOrder": [
        "^@/components/(.*)$",
        "^@/ui/(.*)$",       
        "^@/utils/(.*)$", 
        "^@/types/(.*)$", 
        "^[./]"           
      ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "plugins": ["prettier-plugin-tailwindcss"] 
  }
  